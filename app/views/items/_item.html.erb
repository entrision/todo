<tr id="<%= dom_id(item) %>">
  <td>
    <% if item.done %>
      <%= link_to 'delete', item, method: :delete, class: 'btn btn-danger w-100', data: { reflex: 'click->Item#delete', item_id: item.id } %>
    <% else %>
      <%= link_to 'done', finish_item_path(item), class: 'btn btn-success w-100', data: { reflex: 'click->Item#done', item_id: item.id } %>
    <% end %>
  </td>
  <td>
    <%= futurize partial: 'items/random_image', extends: 'div' do %>
      Loading ...
    <% end %>
  </td>
  <td><%= item.body %></td>
  <td><% unless item.completed_at.blank? %><%=  time_ago_in_words(item.completed_at) %> ago<% end %></td>
</tr>
